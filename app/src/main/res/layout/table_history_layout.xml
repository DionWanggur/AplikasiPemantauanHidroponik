<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:stretchColumns="1,2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/tv_namaNode_history"
            android:gravity="center"
            android:padding="10dp"
            android:text="Node Satu"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textStyle="bold" />

        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_node_status_history"
            android:gravity="center"
            android:padding="10dp"
            android:text="Status"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tv_waktu_history"
            android:gravity="center"
            android:padding="10dp"
            android:text="Waktu"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textStyle="bold" />
    </LinearLayout>

    <TableRow
        android:layout_margin="5dp"
        android:background="@color/cardview_shadow_start_color">

        <TextView
            android:layout_column="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="Parameter"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textStyle="bold" />

        <TextView
            android:layout_column="2"
            android:gravity="center"
            android:padding="10dp"
            android:text="Value"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_margin="5dp"
        android:background="#fff59d">

        <TextView
            android:layout_column="1"
            android:padding="10dp"
            android:text="Suhu udara"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

        <TextView
            android:id="@+id/tv_tbl_SU_value"
            android:layout_column="2"
            android:padding="10dp"
            android:text="Value"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

    </TableRow>

    <TableRow
        android:layout_margin="5dp"
        android:background="#a5d6a7">

        <TextView
            android:layout_column="1"
            android:padding="10dp"
            android:text="Suhu Air"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

        <TextView
            android:id="@+id/tv_tbl_SA_value"
            android:layout_column="2"
            android:padding="10dp"
            android:text="Value"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

    </TableRow>

    <TableRow
        android:layout_margin="5dp"
        android:background="#fff59d">

        <TextView
            android:layout_column="1"
            android:padding="10dp"
            android:text="pH"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

        <TextView
            android:id="@+id/tv_tbl_pH_value"
            android:layout_column="2"
            android:padding="10dp"
            android:text="Value"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

    </TableRow>

    <TableRow
        android:layout_margin="5dp"
        android:background="#a5d6a7">

        <TextView
            android:layout_column="1"
            android:padding="10dp"
            android:text="Kelembaban"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

        <TextView
            android:id="@+id/tv_tbl_Kelembaban_value"
            android:layout_column="2"
            android:padding="10dp"
            android:text="Value"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu" />


    </TableRow>

    <TableRow
        android:layout_margin="5dp"
        android:background="#fff59d">

        <TextView
            android:layout_column="1"
            android:padding="10dp"
            android:text="TDS"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

        <TextView
            android:id="@+id/tv_tbl_TDS_value"
            android:layout_column="2"
            android:padding="10dp"
            android:text="Value"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

    </TableRow>
</TableLayout>
